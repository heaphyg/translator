<div class="container">
  <h1>Welcome to the Ultimate Translator!</h1>

  <form action="/" method="POST">
    <input type="text" name="word" placeholder="Type in a word"><br><br>
    <input type="radio" name="language" value="english">English to German<br>
    <input type="radio" name="language" value="german">German to English<br><br>
    <input type="submit" value="Lookup!">
  </form>
  <br><br>

  <% if current_user %>
  <div class="word-creation">

    <form class='word-creation-form' action='/words/new'>
      <input type="radio" name="create-english" value="create">Create English to German translation<br>
      <input type="radio" name="create-german" value="create">Create German to English translation<br>
    </form>

  <% end %>

  </div>

</div>
